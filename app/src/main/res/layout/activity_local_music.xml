<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/total"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.LocalMusicActivity">

    <LinearLayout
            android:id="@+id/checkControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

        <ImageView
                android:id="@+id/image"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/addNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下一首播放"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:text="取消"
                android:textSize="16sp"/>
    </LinearLayout>

    <View
            android:layout_below="@id/checkControl"
            android:id="@+id/sep"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"/>

    <FrameLayout
            android:layout_below="@id/sep"
            android:layout_above="@id/control"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/music"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/showLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="80dp"/>

        <flandre.cn.novel.ui.view.SlideBar
                android:id="@+id/slideBar"
                android:visibility="invisible"
                android:background="@drawable/slide_background"
                android:paddingRight="6dp"
                app:textPadding="1dp"
                app:textSize="12sp"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"/>
    </FrameLayout>

    <FrameLayout
            android:id="@+id/control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>

    <TextView
            android:id="@+id/permission"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:text="没有权限, 点我或许能申请"/>
</RelativeLayout>